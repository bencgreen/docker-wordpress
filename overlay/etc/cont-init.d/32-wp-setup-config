#!/usr/bin/with-contenv bash

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# If WP_SRC doesn't exist, the source files have not been downloaded correctly.
#======================================================================================================================

[[ ! -d ${WP_SRC} ]] && bcg-error "WordPress source files cannot be found."


#======================================================================================================================
# Run setup config executable.
#======================================================================================================================

s6-setuidgid www ${WP_LIB}/setup-config
