#!/usr/bin/with-contenv sh

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Add environment variables.
#======================================================================================================================

bcg-env "LIB_WP" "${LIB}/wp"

WP=/wp
WP_CONFIG=wp-config.php

bcg-env "WP_ROOT" "${WP}"
bcg-env "WP_CONFIG" "${WP}/${WP_CONFIG}"
bcg-env "WP_CONTENT" "${WP}/content"

bcg-env "NGINX_WWW_WP_CONFIG" "${NGINX_WWW}/${WP_CONFIG}"
bcg-env "NGINX_WWW_WP_CONTENT" "${NGINX_WWW}/wp-content"
