#!/usr/bin/with-contenv bash

set -euo pipefail
source /etc/wp/inc/directories.sh


#======================================================================================================================
# If wp-config.php is a symlink, the setup has already been run
#======================================================================================================================

if [ -L ${WWW}/wp-config.php ] ; then
    _ok "WordPress already set up."
    exit 0
fi


#======================================================================================================================
# Run setup program
#======================================================================================================================

s6-setuidgid www /etc/wp/setup
