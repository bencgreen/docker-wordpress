#!/usr/bin/with-contenv bash

source /etc/wp/directories


#======================================================================================================================
# If wp-config.php is a symlink, the setup has already been run
#======================================================================================================================

if [ -L ${WWW}/wp-config.php ] ; then
    echo " - WordPress already set up."
    exit 0
fi


#======================================================================================================================
# Run setup program
#======================================================================================================================

s6-setuidgid www wp-setup
