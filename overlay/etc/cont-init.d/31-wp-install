#!/usr/bin/with-contenv bash

#======================================================================================================================
# Check for wp-config.php
#======================================================================================================================

if [ -f /etc/wp/wp-config.php && "${WORDPRESS_CLEAN_INSTALL}" = "0" ] ; then
    echo " - WordPress already installed."
    exit 0
fi


#======================================================================================================================
# Run installation program
#======================================================================================================================

s6-setuidgid www wp-install
