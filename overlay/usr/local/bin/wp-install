#!/usr/bin/with-contenv bash

source /etc/wp/directories


#======================================================================================================================
# Clean directories
#======================================================================================================================

echo " - deleting contents of ${WWW} and ${WP}..."
rm -rf ${WWW}/* ${WP}/*
echo " - done."


#======================================================================================================================
# Download WordPress
#======================================================================================================================

cd /tmp

URL="https://${WORDPRESS_LOCALE}.wordpress.org/latest-${WORDPRESS_LOCALE}.zip"
echo " - downloading ${URL}..."
wget -O wp.zip ${URL}
unzip -q wp.zip
rm wp.zip

if [ -d ./wordpress ] ; then
    echo " - done."
else
    echo " - error."
    exit 1
fi


#======================================================================================================================
# Move WordPress files to /www
#======================================================================================================================

echo " - moving WordPress files to ${WWW}..."
mv wordpress/* ${WWW}
rm -rf wordpress
echo " - done."
