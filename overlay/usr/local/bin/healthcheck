#!/usr/bin/with-contenv bash

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Return true for a redirect as well as 200
# WordPress will try and redirect to HTTPS, there is no way to disable this without a plugin
#======================================================================================================================

CODE=$(wget --spider -S "http://localhost" 2>&1 | grep "HTTP/" | awk '{print $2}')
if [[ ${CODE} -ge 200 && ${CODE} -lt 400  ]] ; then
else
    exit 1
fi
