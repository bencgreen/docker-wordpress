#!/usr/bin/with-contenv bash

set -euo pipefail


#======================================================================================================================
# Set correct permissions on /wp-content (see fix-attrs.d/30-wp).
#======================================================================================================================

bcg-echo "Setting permissions on ${WP_CONTENT}..." `basename ${0}`
bcg-ch -o www:www -m 0755 -t d ${WP_CONTENT}
bcg-ch -o www:www -m 0644 -t f ${WP_CONTENT}
bcg-done `basename ${0}`
