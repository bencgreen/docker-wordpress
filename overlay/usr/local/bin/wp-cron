#!/usr/bin/with-contenv bash

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Execute WordPress cron
# See https://developer.wordpress.org/plugins/cron/hooking-wp-cron-into-the-system-task-scheduler/
#======================================================================================================================

bcg-debug "Executing WordPress cron."
CODE=$(${NGINX_LIB}/http-status http://localhost/wp-cron.php)
[[ "${CODE}" = "200" ]] && exit 0 \
    || bcg-error "Error executing cron (HTTP status ${CODE})."
